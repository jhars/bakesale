<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Start at</th>
      <th>End at</th>
      <th>Name</th>
      <th>Organization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.start_at %></td>
        <td><%= event.end_at %></td>
        <td><%= event.name %></td>
        <td><%= event.organization_id %></td>
        <td><%= link_to 'Show', organization_event_path(event.organization, event) %></td>
        <td><%= link_to 'Edit', edit_organization_event_path(event.organization, event) %></td>
        <td><%= link_to 'Destroy', organization_event_path(event.organization, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_organization_event_path(@organization) %>
